<Window x:Class="Evaluator.EvaluationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evaluator"
        mc:Ignorable="d"
        Title="Evaluation" Height="520" Width="640"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Time (during test) -->
        <StackPanel x:Name="TimePanel" Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <TextBlock Text="Elapsed: " FontWeight="SemiBold"/>
            <TextBlock x:Name="ElapsedText" Text="0:00"/>
            <TextBlock Text="   Remaining: " FontWeight="SemiBold" Margin="24,0,0,0"/>
            <TextBlock x:Name="RemainingText" Text="--:--"/>
        </StackPanel>
        <!-- Result (review mode) -->
        <StackPanel x:Name="ResultPanel" Grid.Row="0" Visibility="Collapsed" Margin="0,0,0,12">
            <TextBlock x:Name="ResultTitleText" FontSize="16" FontWeight="SemiBold"/>
            <TextBlock x:Name="ResultScoreText" Margin="0,4,0,0"/>
            <TextBlock x:Name="ResultTimeText"/>
        </StackPanel>

        <!-- Question number -->
        <TextBlock Grid.Row="1" x:Name="QuestionNumberText" Text="Question 1 of N" Margin="0,0,0,8"/>

        <!-- Question content: statement + answers -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="0,0,0,12">
            <StackPanel>
                <TextBlock Text="Question:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <Border BorderBrush="#ccc" BorderThickness="1" CornerRadius="4" Padding="12" Margin="0,0,0,16">
                    <TextBlock x:Name="StatementText" TextWrapping="Wrap" FontSize="14"/>
                </Border>
                <TextBlock x:Name="AnswersLabel" Text="Select all that apply:" FontWeight="SemiBold" Margin="0,0,0,6"/>
                <ItemsControl x:Name="AnswersItems">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,4" Padding="6,4" CornerRadius="3">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                <Setter Property="Background" Value="#e0f7e0"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                          IsEnabled="{Binding IsEditing}" FontSize="13" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                </CheckBox>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Navigation and Finish -->
        <Grid Grid.Row="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="PrevButton" Content="Previous" Click="PrevButton_Click" Padding="12,8" Margin="0,0,8,0"/>
                <Button x:Name="NextButton" Content="Next" Click="NextButton_Click" Padding="12,8"/>
            </StackPanel>
            <Button x:Name="FinishButton" Content="Finish" Click="FinishButton_Click" Padding="16,8"
                    HorizontalAlignment="Right" FontWeight="SemiBold" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>
