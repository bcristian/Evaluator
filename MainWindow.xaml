<Window x:Class="Evaluator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evaluator"
        mc:Ignorable="d"
        Title="Test Practice" Height="560" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*" MinWidth="220"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.RowSpan="3" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Available tests" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,4"/>
            <ListBox Grid.Row="1" x:Name="TestsListBox" DisplayMemberPath="DisplayName"
                     SelectionMode="Single" BorderThickness="1" BorderBrush="#ccc"
                     SelectionChanged="TestsListBox_SelectionChanged" MouseDoubleClick="TestsListBox_MouseDoubleClick" MinHeight="60"/>
            <TextBlock Grid.Row="2" Text="Question lists" FontSize="14" FontWeight="SemiBold" Margin="0,12,0,4"/>
            <ListBox Grid.Row="3" x:Name="QuestionListsListBox" DisplayMemberPath="DisplayName"
                     SelectionMode="Single" BorderThickness="1" BorderBrush="#ccc"
                     SelectionChanged="QuestionListsListBox_SelectionChanged" MinHeight="60"/>
        </Grid>

        <TextBlock x:Name="DetailsTitle" Grid.Row="0" Grid.Column="2" Text="Details" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
        <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="2" BorderBrush="#ccc" BorderThickness="1"
                CornerRadius="4" Background="#fafafa" Padding="12" Margin="0,4,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock x:Name="InfoPlaceholder" Text="Select a test or a question list." Foreground="#666" TextWrapping="Wrap"/>
                    <StackPanel x:Name="TestInfoPanel" Visibility="Collapsed">
                        <TextBlock x:Name="TotalQuestionsText" Margin="0,0,0,6"/>
                        <TextBlock Text="From question lists:" FontWeight="SemiBold" Margin="0,8,0,4"/>
                        <ItemsControl x:Name="QuestionListBreakdown">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,2"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <TextBlock x:Name="RequiredCorrectText" Margin="0,12,0,4"/>
                        <TextBlock x:Name="TimeLimitText"/>
                        <TextBlock Text="History" FontWeight="SemiBold" Margin="0,16,0,4"/>
                        <TextBlock x:Name="HistoryStatsText" TextWrapping="Wrap" Margin="0,0,0,0"/>
                    </StackPanel>
                    <StackPanel x:Name="QuestionListDetailPanel" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Sort: " VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <ComboBox x:Name="QuestionListSortComboBox" Width="180" SelectionChanged="QuestionListSortComboBox_SelectionChanged">
                                <ComboBoxItem Content="Default" IsSelected="True"/>
                                <ComboBoxItem Content="Weight (ascending)"/>
                                <ComboBoxItem Content="Weight (descending)"/>
                            </ComboBox>
                            <TextBlock x:Name="QuestionListCountText" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="#555"/>
                        </StackPanel>
                        <ItemsControl x:Name="QuestionListDetailsItems">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#ddd" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,12" Background="White">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Statement}" TextWrapping="Wrap" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <ItemsControl ItemsSource="{Binding Answers}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Padding="4,2" Margin="0,2" CornerRadius="2">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsCorrect}" Value="True">
                                                                            <Setter Property="Background" Value="#e0f7e0"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                            <TextBlock Margin="0,6,0,0" Foreground="#555" FontSize="12">
                                                <Run Text="Answered: "/>
                                                <Run Text="{Binding TimesAnswered, Mode=OneWay}"/>
                                                <Run Text="  Correct: "/>
                                                <Run Text="{Binding TimesCorrect, Mode=OneWay}"/>
                                                <Run Text="  Weight: "/>
                                                <Run Text="{Binding Weight, Mode=OneWay}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Button Grid.Row="4" Grid.Column="0" x:Name="StartButton" Content="Start evaluation" IsDefault="True"
                Click="StartButton_Click" HorizontalAlignment="Right"
                IsEnabled="False"/>
    </Grid>
</Window>
